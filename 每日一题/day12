//1.找环的入口点
#if 0
struct ListNode {
	int val;
	struct ListNode *next;
	ListNode(int x) :
		val(x), next(NULL) {
	}
};
ListNode* EntryNodeOfLoop(ListNode* pHead)
{
	if (pHead == NULL)
		return NULL;

	ListNode* first = pHead;
	ListNode* slow = pHead;
	while (first->next!=NULL&&slow!= NULL)
	{
		first = first->next->next;
		slow = slow->next;
		if (slow == first)
		{
			slow = pHead;
			while (slow != first)
			{
				first = first->next;
				slow = slow->next;
			}
			return slow;
		}
	}
	return NULL;
}

//2.删除重复的节点
#if 0
struct ListNode {
	int val;
	struct ListNode *next;
	ListNode(int x) :
		val(x), next(NULL) {
	}
};
ListNode* deleteDuplication(ListNode* pHead)
{
	if (pHead == NULL)
		return NULL;
	ListNode* newhead = new ListNode(-1);
	newhead->next = pHead;
	ListNode* temp = newhead;
	ListNode* p = pHead;
	ListNode* Next = NULL;
	while (p != NULL&& p->next != NULL)
	{
		Next = p->next;
		if (p->val == Next->val)
		{
			while (Next != NULL&&Next->val == p->val)
				Next = Next->next;
			temp->next = Next;
			p = Next;
		}
		else
		{
			temp = p;
			p = p->next;
		}
	}
	return newhead->next;
}
